{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
